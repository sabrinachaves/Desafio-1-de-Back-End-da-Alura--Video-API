{
  "name": "video_api-desafio_alura",
  "version": "1.0.0",
  "description": "Video API",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "babel src --extensions \".ts\" --out-dir dist --copy-files --no-copy-ignored",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "format": "eslint --fix . && prettier --write .",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:ci": "jest --bail --testPathIgnorePatterns \"tests/e2e/.*\\.test\\.ts\" --ci --json --coverage --testLocationInResults --outputFile=report.json",
    "lint": "npm run lint:tsc && eslint . && prettier --check \"src/**/*.(ts|tsx)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabrinachaves/Desafio-1-de-Back-End-da-Alura--Video-API.git"
  },
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/node": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-decorators": "^7.17.12",
    "@babel/plugin-transform-flow-strip-types": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "babel-plugin-module-resolver": "^4.1.0",
    "dotenv": "^16.0.1",
    "mongoose": "^6.3.4",
    "uuid": "^8.3.2",
    "http-status": "^1.5.2",
    "express": "^4.18.1",
    "joi": "^17.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.16",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.2",
    "@types/uuid": "^8.3.4",
    "@types/express": "^4.17.13"
  },
  "keywords": [],
  "author": "Sabrina Chaves",
  "license": "ISC"
}
